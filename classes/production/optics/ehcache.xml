<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="com.memin.optics.domain.User" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.Authority" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.memin.optics.social.SocialUserConnection" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.Shop" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.Shop.customers" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.Customer" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.Customer.sales" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.Sale" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.Sale.products" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.Product" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.Product.sales" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.Product.types" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.Payment" uses-template="simple"/>

    <cache alias="com.memin.optics.domain.Customer.payments" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
